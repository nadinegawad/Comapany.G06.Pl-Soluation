
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>
<br />
<br />
<a asp-controller="Departments" asp-action="Create" class="btn btn-primary">Creat Deparment</a>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(D =>D.Code)</th>
            <th>@Html.DisplayNameFor(D =>D.Name)</th>
            <th>@Html.DisplayNameFor(D =>D.DateOfCreation)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        
            @foreach(var department in Model)
            {
               <tr>
                <td>@department.Code</td>
                <td>@department.Name</td>
                <td>@department.DateOfCreation</td>
                <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@department.Id">Details</a></td>
                <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@department.Id">Update</a></td>
                <td><a  asp-action="Delete" class="btn btn-danger" asp-route-id="@department.Id">Delete</a></td>
               
               </tr> 
            }
       
    </tbody>
</table>
